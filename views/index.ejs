<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Travel Explorer</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="content"><!-- Wrapper Start -->

    <!-- Navbar -->
    <header>
      <nav class="navbar">
        <div class="logo">Travel Explorer</div>
        <ul class="nav-links">
          <li><a href="/destination">Destinations</a></li>
          <li><a href="/bookings">Bookings</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
      <h1>Discover Your Next Adventure</h1>
      <p>Explore the world with us. Find the best destinations and travel deals.</p>
      <a href="/login" class="btn">Get Started</a>
    </section>

    <!-- Destinations -->
    <section class="destinations">
      <h2>Popular Destinations</h2>
      <div class="cards">
        <% destinations.slice(0, 3).forEach(dest => { %>
          <a href="/destination/<%= dest._id %>" class="card-link">
            <div class="card">
              <img src="<%= dest.image %>" alt="<%= dest.name %>">
              <h3><%= dest.name %></h3>
              <p><%= dest.description %></p>
            </div>
          </a>
        <% }) %>
      </div>
    </section>

  </div><!-- Wrapper End -->

  <!-- Footer -->
  <footer>
    <p>Â© 2025 Travel Explorer. All Rights Reserved.</p>
  </footer>
</body>
</html>
